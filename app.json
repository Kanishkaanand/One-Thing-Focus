{
  "expo": {
    "name": "One Thing",
    "slug": "one-thing",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "onething",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#FAF7F2"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.kanishkaanand.onethingfocus",
      "buildNumber": "1",
      "infoPlist": {
        "NSUserNotificationUsageDescription": "One Thing uses notifications to remind you to pick and complete your daily task.",
        "NSPhotoLibraryUsageDescription": "One Thing lets you attach a photo as proof of task completion."
      }
    },
    "android": {
      "package": "com.kanishkaanand.onethingfocus",
      "versionCode": 1,
      "permissions": [
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.READ_MEDIA_IMAGES"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#FAF7F2",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://replit.com/"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "One Thing lets you attach a photo as proof of task completion."
        }
      ],
      [
        "expo-notifications",
        {
          "defaultChannel": "daily-reminders"
        }
      ],
      "expo-font",
      "expo-web-browser",
      [
        "@bittingz/expo-widgets",
        {
          "ios": {
            "src": "./widgets/ios",
            "devTeamId": "REPLACE_WITH_YOUR_TEAM_ID",
            "mode": "production",
            "moduleDependencies": [],
            "useLiveActivities": false,
            "frequentUpdates": false,
            "entitlements": {
              "com.apple.security.application-groups": ["group.com.kanishkaanand.onethingfocus"]
            }
          },
          "android": {
            "src": "./widgets/android",
            "widgets": [
              {
                "name": "OneThingWidgetProvider",
                "resourceName": "@xml/one_thing_widget_info"
              }
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
