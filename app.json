{
  "expo": {
    "name": "One Thing",
    "slug": "one-thing",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "onething",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#FAF7F2"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.kanishkaanand.onethingfocus",
      "buildNumber": "4",
      "infoPlist": {
        "NSUserNotificationUsageDescription": "One Thing uses notifications to remind you to pick and complete your daily task.",
        "NSPhotoLibraryUsageDescription": "One Thing lets you attach a photo as proof of task completion.",
        "NSSupportsLiveActivities": false,
        "NSSupportsLiveActivitiesFrequentUpdates": false,
        "ITSAppUsesNonExemptEncryption": false
      },
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.com.kanishkaanand.onethingfocus.expowidgets"
        ],
        "aps-environment": "production"
      }
    },
    "android": {
      "package": "com.kanishkaanand.onethingfocus",
      "versionCode": 2,
      "permissions": [
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FAF7F2"
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://replit.com/"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "One Thing lets you attach a photo as proof of task completion."
        }
      ],
      [
        "expo-notifications",
        {
          "defaultChannel": "daily-reminders"
        }
      ],
      "expo-font",
      "expo-web-browser",
      [
        "@bittingz/expo-widgets",
        {
          "ios": {
            "src": "./widgets/ios",
            "devTeamId": "78UCPHZ54V",
            "mode": "production",
            "moduleDependencies": [],
            "useLiveActivities": false,
            "frequentUpdates": false,
            "entitlements": {
              "com.apple.security.application-groups": [
                "group.com.kanishkaanand.onethingfocus"
              ]
            }
          },
          "android": {
            "src": "./widgets/android",
            "widgets": [
              {
                "name": "OneThingWidgetProvider",
                "resourceName": "@xml/one_thing_widget_info"
              }
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {
        "origin": "https://replit.com/"
      },
      "eas": {
        "projectId": "b8bee930-6278-4992-8640-3062475b403b"
      }
    },
    "owner": "kanishkaanand"
  }
}
